<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <meta name="google-site-verification"
        content="nOVhyCaoXpjBXXPo-CqrEgfb2rKBCeNpaKtmZ-xNaeM">

  <title>{{ title or "Right to Recall Party" }}</title>

  <link rel="stylesheet" href="/bundle.css">
  <script src="/bundle.js" defer></script>

</head>

<body>

	{# HEADER (global navigation) #}
	{% include "header.njk" %}

  
  {# MAIN CONTENT #}
  <main>
	<div class="content">
		<nav class="breadcrumb" aria-label="Breadcrumb">
  <a href="/">Home</a>

  {% set currentPath = "" %}
  {% set segments = page.url | pathSegments %}

  {% for part in segments %}
    <span class="crumb-sep">â€º</span>

    {% set currentPath = currentPath + "/" + part + "/" %}

    {% if loop.last %}
      {# LAST PAGE: always clickable #}
      <a href="{{ page.url }}">
        {{ part | replace("-", " ") | title }}
      </a>

    {% else %}
      {# INTERMEDIATE LEVELS #}
      {% set hasIndex = false %}
      {% for p in collections.all %}
        {% if p.url == currentPath %}
          {% set hasIndex = true %}
        {% endif %}
      {% endfor %}

      {% if hasIndex %}
        <a href="{{ currentPath }}">
          {{ part | replace("-", " ") | title }}
        </a>
      {% else %}
        <span class="crumb-disabled">
          {{ part | replace("-", " ") | title }}
        </span>
      {% endif %}
    {% endif %}
  {% endfor %}
</nav>
    {{ content | safe }}
    	</div>
  </main>

  {% include "footer.html" %}

</body>
</html>
